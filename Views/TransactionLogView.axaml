<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="600" d:DesignHeight="800"
             x:Class="EBISX_POS.Views.TransactionLogView"
             xmlns:vm="clr-namespace:EBISX_POS.ViewModels.Manager"
             x:DataType="vm:TransactionLogViewModel">
	<!-- Single container element to hold all content -->
	<StackPanel Margin="10">
		<TextBlock Text="Transaction Logs" FontSize="20" Margin="0,0,0,10"/>
		<DataGrid ItemsSource="{Binding TransactionLogs}" AutoGenerateColumns="False" IsReadOnly="True">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Transaction ID" Binding="{Binding TransactionId}" />
				<DataGridTextColumn Header="Cashier" Binding="{Binding Cashier}" />
				<DataGridTextColumn Header="Date" Binding="{Binding LogDate}" />
				<DataGridTextColumn Header="Time" Binding="{Binding LogTime}" />
				<DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" />
			</DataGrid.Columns>
		</DataGrid>
		<Button Content="Reload Logs" Command="{Binding LoadTransactionLogsCommand}" Margin="0,10,0,0"/>
	</StackPanel>
</UserControl>